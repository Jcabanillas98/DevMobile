<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="2dp" android:top="2dp">
                <shape>
                    <solid android:color="@color/blackShadow" />
                    <corners android:radius="@dimen/dimen_10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:top="1dp" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#0D000000" />
                    <corners android:radius="@dimen/dimen_10dp" />
                </shape>
            </item>
            <!-- SHADOW LAYER -->
            <item>
                <shape>
                    <solid android:color="#1A000000" />
                    <corners android:radius="@dimen/dimen_10dp" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="9dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>